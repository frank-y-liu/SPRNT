COMPILE = \
  @echo " " ; echo "Compiling $(@F) on $(HOST) ..." ; echo " " ; \
  echo "$(COMPILER) -c $(FFLAGS) $?" > Compile ; \
  echo "touch $@" >> Compile ; \
  rsh $(HOST) "cd $(THISDIR) ; csh -x Compile" ; \
  rm Compile

